"resource/layout/steamrootdialog_gamespage_details.layout" {
	controls {
		GamesList {
			tabposition=1 
		}
		
		DetailsBorder { 
			controlname=Panel 
			style="DetailsBorderPanel" 
			zpos="-1" 
		}

		// Header image, plus overlays 
		headerimagea { 
			controlname="ImagePanel" 
			style="headerimage" 
			zpos="-4" 
			visible=1 
			scaling="none" 
			horizontal-align=left 
			vertical-align=top 
		}
		
		headerimageb { 
			controlname="ImagePanel" 
			style="headerimage" 
			zpos="-4" 
			visible=1 
			scaling="none" 
			horizontal-align=left 
			vertical-align=top 
		}

		// Header text labels
		gametitleheader { 
			controlname="CDetailsGameTitleHeaderPanel" 
			zpos="2" 
		}
		
		gamesubheader { 
			controlname="CDetailsGameSubHeaderPanel" 
			zpos="2" 
		}
		
		linkslabel { 
			controlname="Label" 
			labeltext="#Steam_Links" 
			style="rightcolumnheadertext" 
		}
		 
		sendguestpasslink { controlname="URLLabel" labeltext="#steam_send_guestpass" style="rightcolumnlink" tabposition=7 command="SendGuestPass" }
		achievementslink { controlname="URLLabel" labeltext="#Steam_Achievements" style="rightcolumnlink" }
		forumlink { controlname="URLLabel" labeltext="#Steam_Forums" style="rightcolumnlink" }
		ogglink { controlname="URLLabel" labeltext="#Steam_OGG" style="rightcolumnlink" }
		manuallink { controlname="URLLabel" labeltext="#Steam_Game_Manual" style="rightcolumnlink" }
		newslink { controlname="URLLabel" labeltext="#Steam_News" style="rightcolumnlink" }
		storelink { controlname="URLLabel" labeltext="#Steam_Game_SteamStorePage" style="rightcolumnlink" }
		gamehublink { controlname="URLLabel" labeltext="#Steam_Game_GameHub" style="rightcolumnlink" }
		dlclink { controlname="URLLabel" labeltext="#Steam_DLC" style="rightcolumnlink" }
		cdkeylink { controlname="URLLabel" labeltext="#Steam_CDKeyLink" style="rightcolumnlink" }
		guidelink { controlname="URLLabel" labeltext="#Steam_Guide" style="rightcolumnlink" }
		guideslink { controlname="URLLabel" labeltext="#Steam_Guides" style="rightcolumnlink" }
		supportlink { controlname="URLLabel" labeltext="#Steam_Support" style="rightcolumnlink" }
		recommendlink { controlname="URLLabel" labeltext="#Steam_Game_RecommendGame" style="rightcolumnlink" }


		// Right column tags
		tagslabel { 
			controlname="Label" 
			labeltext="#Steam_Tags" 
			style="rightcolumnheadertext" 
		}
		
		edittagslink { controlname="URLLabel" labeltext="#steam_details_edittags" style="rightcolumnlink" }

		// Body contents
		welcomedetails { 
			controlname="CGamesPage_Details_Welcome" 
			zpos="1" 
		}
		
		friendsdetails { 
			controlname="CGamesPage_Details_Friends" 
			zpos="1" 
		}
		
		clouddetails { controlname="CGamesPage_Details_Cloud" zpos="1" }
		communityfilesdetails { controlname="CGamesPage_Details_CommunityFiles" zpos="1" }
		achievementsdetails { controlname="CGamesPage_Details_Achievements" zpos="1" }
		newsdetails { controlname="CGamesPage_Details_News" zpos="1" }
		nonsteamdetails { controlname="CGamesPage_Details_NonSteam" zpos="1" }
		screenshotsdetails { 
			controlname="CGamesPage_Details_Screenshots" zpos="1" 
		}

		// Empty list contents
		emptylisttext { 
			controlname="RichText" style="emptylisttext" 
		}

	}

	styles {
	
	
		button {
			textcolor=blue
			font-style="none"
			render_bg{}
		}
	
		CGamesListPanel {
			render_bg {}
		}

		emptylisttext {
			textcolor="lightestGrey"
			font-size=3
			render_bg {}
		}

		CGamesPage_Details {
			bgcolor="darkestGrey"
			render {}
			render_bg {}
		}

		// Some overrides for our listpanel
		"GamesPage_Details ListPanel" {
			inset="0 -2 0 -2"
			bgcolor="blue"
			padding-left=4
			padding-right=0
			
			render_bg {}
			render {}
		}
		
		"GamesPage_Details ListPanelInterior" {
			bgcolor="none"
			inset="0 0 0 0"
			minimum-width=320
			render {}
			render_bg {}
		}
		
			"GamesPage_Details ListPanelInterior:scrollbar" {     
				inset="0 0 0 0"
				bgcolor=none
				render {}
				render_bg {}
			}
			
		ListPanelSectionCollapser {
			inset="-6 0 0 0"
			image="graphics/icon_collapse"
			padding-top=0
			padding-bottom=0
			
			render_bg {
				0="gradient(x0, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0, y0, x1, y0+1, greyHighlight)"
			}   
		}
		
			ListPanelSectionCollapser:selected {
				image="graphics/icon_expand"
			}
		
		ListPanelSectionHeader {     
			inset="0 2 0 0"
			textcolor=white
			
			font-style="outerglow"
			font-outerglow-color="darkGreyEnd"
			font-outerglow-offset=1
			font-outerglow-filtersize=1
			
						
			render_bg {
				0="gradient(x0, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0, y0, x1, y0+1, greyHighlight)"
			}    
		} 

		"GamesPage_Details ListPanelDragger" {
			bgcolor="none"
			render {}
			render_bg {}
		}
		
		"GamesPage_Details ListPanelColumnHeader" {
			bgcolor="none"
			font-size=11
			font-weight=800
			inset="0 0 0 0"
			render {}
		}
		
		"CGamesListPanel ListPanelColumnSelectButton" {
       		inset="13 2 0 0"
       		padding-left=0
       		padding-right=0
       		manimum-width=8
       		manimum-height=8
       		bgcolor=none
        	render {
          		5="image( x0 + 10, y0 + 5, x1, y1, graphics/cog )"
        	}   
        	render_bg {
        		0="fill(x0,y0,x1,y1, darkestGrey)"
        	}
		}
		
				
			"CGamesListPanel ListPanelColumnSelectButton:selected" {
	       		inset="13 2 0 0"
	       		padding-left=0
	       		padding-right=0
	       		manimum-width=8
	       		manimum-height=8
	       		bgcolor=none
	        	render {
	          		5="image( x0 + 10, y0 + 5, x1, y1, graphics/cog_active )"
	        	}   
	        	render_bg {
	        		0="fill(x0,y0,x1,y1, darkestGrey)"
	        	}
			}		
		
		
		headerimage { 
			bgcolor="0 0 0 0"
			
			render {
				
			}
			 
		}

		rightcolumnheadertext {
			inset="0 0 0 0"
			font-family=headerfont
			font-size=0
			textcolor=none
			bgcolor=black65
		}
		
			rightcolumnheadertext-red {
				inset="0 0 0 0"
				font-family=headerfont
				font-size=0
				textcolor=none
				bgcolor=black65
			}
	
			rightcolumnheadertext-green {
				inset="0 0 0 0"
				font-family=headerfont
				font-size=0
				textcolor=none
				bgcolor=black65
			}
	
			rightcolumnheadertext-blue {
				inset="0 0 0 0"
				font-family=headerfont
				font-size=0
				textcolor=none
				bgcolor=black65
			}

		rightcolumnlink {
			font-size=13
			font-style=normal
			textcolor=blue
			font-family=basefont
		}

			rightcolumnlink:hover {
				textcolor=lightestBlue
			}
	
			rightcolumnlink:disabled {
				textcolor=darkestBlue
			}
		
		rightcolumntag {
			inset="-9 0 0 0"
			font-size=15
			font-style=normal
			textcolor=Label
			padding-left=10
			padding-top=0
			font-family=basefont
			padding-bottom=0
		}
		
		DetailsBorderPanel {
			bgcolor = none
			render {}
		}
	}

	layout {
		region	{ name="list" y=0 x=0 width=320 height=max margin-bottom=-5 }
		region	{ name="details" y=0 x=320 width=max height=max overflow=scroll-vertical margin-left=0 margin-top=0 margin-bottom=0 margin-right=-1}
		region	{ name="headertext" region=details y=0 x=0 width=max height=max margin-right=-10 }
		region	{ name="rightcolumn" region=details y=171 height=max width=1156 margin-right=0 margin-top=1 margin-bottom=1 overflow=allow-vertical }
		region  { name="detailsbody" region=details y=174 height=max width=1156 margin-right=-10 overflow=allow-vertical }

		// Empty list text, which goes across regions
		place	{ control=emptylisttext x=0 y=0 width=max height=max margin=10 }

		// Games list on left
		place 	{ control=GamesList region=list width=320 height=max margin=0 }
		
		// Body contents
		place { 
			control=friendsdetails,achievementsdetails,clouddetails,screenshotsdetails,communityfilesdetails,newsdetails,nonsteamdetails
			region=detailsbody
			dir=down
			width=max
			margin-right=0
			margin-top=0
			margin-left=0
			spacing=30
			margin-bottom=10 
		}
		
		// Hide the useless-as-balls "Get Info" bit.
		
		place {
			control="welcomedetails"
			y=0
			x=0
			height=0
			width=0
		}

		
		// Details border
		place 	{ control=DetailsBorder y=1 x=1 width=0 height=0 }

		// Main header image is at the bottom, then one of three color overlays is visible, and finally the 
		// horizontal fade out gradient on the top.  We have an a and a b image, which we crossfade between.
		place 	{ control=headerimagea width=1024 height=550 x=220 y=0 }
		place 	{ control=headerimageb width=1024 height=550 x=220 y=0 }

		// Header text
		place 	{ control=gametitleheader region=headertext dir=down x=20 y=20 height=46 align=left margin-right=315 }
		place	{ control=gamesubheader region=headertext dir=down margin-right=20 align=right y=0 height=75}
		
		
		
		place {
			control=linkslabel
			width=max
			height=100
			region=headertext
		}
		
		// Community Hub, Forums, Related Groups, Store Page, DLC, Community Guides, Write Review
		
		region	{ 
			name="gamedata" 
			y=80 
			x=20 
			width=max 
			height=50 
			region=headertext 
		}
		
			place {
				control=gamehublink,forumlink,ogglink,storelink,guideslink,dlclink
				region="gamedata"
				spacing=20
			}
			
		
		place {
			control=achievementslink,manuallink,newslink,cdkeylink,supportlink,recommendlink,tagslabel,*taglink,edittagslink,sendguestpasslink,guidelink
			region="gamedata"
			dir=right
			margin-right=0
			width=0
			height=0
			x=0
			y=0
			spacing=2
		}
		
	}

}
