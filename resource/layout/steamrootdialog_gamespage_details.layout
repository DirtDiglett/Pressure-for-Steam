"resource/layout/steamrootdialog_gamespage_details.layout" {
	styles {
		button {
			textcolor=blue
			font-style="none"

			render_bg{}
		}
	
		CGamesListPanel {
			render {}
			render_bg {}
		}

		emptylisttext {
			textcolor="red"
			font-size=15
font-size=14 [$LINUX]
			inset="16 100 16 16"

			render_bg {
				0="fill(x0,y0,x0+320,y1, black90)"
				1="image(x0+130, y0+30, x1, y1, resource/icon_warning)"
			}
		}

		CGamesPage_Details {
			bgcolor="darkestGrey"
			
			render {
				0="gradient_horizontal(x0+320,y0,x0+326,y1, black40, none)"
				1="gradient(x0,y0,x1,y0+6, black40, none)"
				2="gradient(x0,y1-6,x1,y1, none, black40)"
			}
			render_bg {
				0="image_scale(x0,y0,x1,y1, graphics/gamebg)"
			}
		}

		// Some overrides for our listpanel
		"GamesPage_Details ListPanel" {
			bgcolor="blue"
			padding-left=4
			padding-right=0
			inset="0 1 0 -2"
			
			render {}
			render_bg {}
		}
		
		"GamesPage_Details ListPanelInterior" {
			bgcolor="darkestGrey"
			inset="0 0 0 0"
			minimum-width=320

			render {}
			render_bg {}
		}
		
			"GamesPage_Details ListPanelInterior:scrollbar" {     
				bgcolor=none
				inset="0 0 0 0"

				render {}
				render_bg {}
			}

		"GamesPage_Details ListPanelDragger" {
			bgcolor="none"
			
			render {}
			render_bg {}
		}
		
		"GamesPage_Details ListPanelColumnHeader" {
			bgcolor="none"
			font-size=11
			font-family=semibold
			font-weight=800
			inset="0 0 0 0"
			
			render {}
		}
		
		"CGamesListPanel ListPanelColumnSelectButton" {
       		bgcolor=none
       		padding-left=0
       		padding-right=0
       		inset="13 2 0 0"
       		minimum-width=8
       		minimum-height=8
        	
        	render {
          		5="image( x0 + 10, y0 + 5, x1, y1, graphics/cog )"
        	}
        	render_bg {
        		0="fill(x0,y0,x1,y1, darkestGrey)"
        	}
		}
			
			"CGamesListPanel ListPanelColumnSelectButton:selected" {
	       		bgcolor=none
	       		padding-left=0
	       		padding-right=0
	       		inset="13 2 0 0"
	        	minimum-width=8
	       		minimum-height=8

	        	render {
	          		5="image( x0 + 10, y0 + 5, x1, y1, graphics/cog_active )"
	        	}   
	        	render_bg {
	        		0="fill(x0,y0,x1,y1, darkestGrey)"
	        	}
			}		
		
		
		headerimage { 
			bgcolor="0 0 0 0"
			
			render {}
		}

		rightcolumnheadertext {
			bgcolor=black65
			textcolor=none
			font-family=headerfont
			font-size=0
			inset="0 0 0 0"
		}
		
			rightcolumnheadertext-red {
				bgcolor=black65
				textcolor=none
				font-family=headerfont
				font-size=0
				inset="0 0 0 0"
			}
	
			rightcolumnheadertext-green {
				bgcolor=black65
				textcolor=none
				font-family=headerfont
				font-size=0
				inset="0 0 0 0"
			}
	
			rightcolumnheadertext-blue {
				bgcolor=black65
				textcolor=none
				font-family=headerfont
				font-size=0
				inset="0 0 0 0"
			}

		rightcolumnlink {
			textcolor=blue
			font-size=15
font-size=14 [$LINUX]
			font-style=normal
			font-family=basefont
		}

			rightcolumnlink:hover {
				textcolor=lightestBlue
			}
	
			rightcolumnlink:disabled {
				textcolor=darkestBlue
			}
		
		rightcolumntag {
			textcolor=Label
			font-family=basefont
			font-size=15
font-size=14 [$LINUX]
			font-style=normal
			padding-left=10
			padding-top=0
			padding-bottom=0
			inset="-9 0 0 0"
		}
		
		DetailsBorderPanel {
			bgcolor = none

			render {}
		}
	}

	layout {
		region {
			name="list"
			x=0
			y=0
			width=320
			height=max
			margin-bottom=-5
		}
		
		region {
			name="details"
			x=320
			y=0
			width=max
			height=max
			margin-left=0
			margin-top=0
			margin-right=-1
			margin-bottom=0
			overflow=scroll-vertical
		}
		
		region {
			name="headertext"
			region=details
			x=0
			y=0
			width=max
			height=max
			margin-right=-15
		}
		
		region {
			name="rightcolumn"
			region=details
			y=171
			width=0
			height=max
			margin-top=1
			margin-right=-10
			margin-bottom=1
			overflow=allow-vertical
		}
		
		region {
			name="detailsbody"
			region=details
			y=174
			width=max
			height=max
			margin-right=-15
			overflow=allow-vertical
		}

		// Empty list text, which goes across regions
		place {
			control=emptylisttext
			x=0
			y=0
			width=320
			height=max
		}

		// Games list on left
		place {
			control=GamesList
			region=list
			width=320
			height=max
			margin=0
		}
		
		place { 
			control=welcomedetails
			region=detailsbody
			dir=down
			width=max
			height=110
			margin-left=0
			margin-top=0
			margin-right=0
			margin-bottom=10
			spacing=30
		}
		
		// Body contents
		place { 
			control=friendsdetails,achievementsdetails,dlcdetails,clouddetails,screenshotsdetails,communityfilesdetails,newsdetails,nonsteamdetails
			region=detailsbody
			start=welcomedetails
			y=30
			width=max
			margin-left=0
			margin-top=0
			margin-right=0
			margin-bottom=10 
			dir=down
			spacing=30
		}
		
		// Details border
		place {
			control=DetailsBorder
			x=1
			y=1
			width=0
			height=0
		}

		// Main header image is at the bottom, then one of three color overlays is visible, and finally the 
		// horizontal fade out gradient on the top.  We have an a and a b image, which we crossfade between.
		place {
			control=headerimagea
			x=320
			y=0
			width=1024
			height=550
		}
		
		place {
			control=headerimageb
			x=320
			y=0
			width=1024
			height=550
		}

		// Header text
		place {
			control=gametitleheader
			region=headertext
			align=left
			x=20
			y=20
			height=46
			margin-right=20
			dir=down
		}
		
		place {
			control=gamesubheader
			region=headertext
			align=left
			x=20
			y=60
			width=max
			height=50
			margin-right=20
			dir=down
		}
		
		place {
			control=tagslabel
			region=headertext
			width=max
			height=150
		}
		
		// Community Hub, Forums, Related Groups, Store Page, DLC, Community Guides, Write Review
		region	{ 
			name="gamedata" 
			region=headertext
			x=20
			y=120
			width=max 
			height=50 
		}
		
		place {
			control=gamehublink,forumlink,ogglink,storelink,guideslink,dlclink,cdkeylink
			region="gamedata"
			spacing=20
		}
		
		place {
			control=achievementslink,manuallink,newslink,supportlink,recommendlink,linkslabel,*taglink,edittagslink,sendguestpasslink,guidelink
			region="gamedata"
			x=0
			y=0
			width=0
			height=0
			margin-right=0
			dir=right
			spacing=2
		}		
	}
}