"resource/layout/parentalunlockdialog.layout" {
	styles {
		ParentalUnlockDialog {
			minimum-width = 400
			minimum-height = 250
		
			render_bg {
				0="fill( x0, y1-51, x1, y1-50, darkestGrey )"
				1="fill( x0+1, y1-50, x1-1, y1-49, greyHighlight )"
				2="gradient( x0+1, y1-49, x1-1, y1-1, grey, lightGreyEnd )"
			}
		}
		Password {
			bgcolor="none"
			font-size=40
			minimum-height=50
		}
		Hey {
			textcolor=white
			font-size=18
		}
	
		Hey2 {
			textcolor=none
			font-size=16
			font-size=15
			font-size=14 [$LINUX]
		}
	
		Key {
			bgcolor=none
			image="graphics/keybg"
			inset="20 0 0 0"
			render_bg {}
		}
	}

	layout {
		region {
			name="top"
			width=max
			height=260
			margin=10
			margin-top=40
		}
		region {
			name="bottom"
			align=bottom
			width=max
			height=51
		}
		place {
			control="KeyImage"
			region="top"
			align=left
			x=160
			y=0
			width=max
			height=max
			margin-top=-30
			margin-right=0
		}
		place {
			control="Instructions, Instructions2"
			region="top"
			x=20
			y=10
			width=max
			spacing=8
			dir=down
		}
	
		place {
			control="Password"
			region="top"
			width=70
			margin-left=155
			margin-top="75"
		}
		place {
			control="Recovery"
			region="bottom"
			margin-left=10
			margin-top=5
		}
	
		place {
			control="OK,Cancel"
			region="bottom"
			align=right
			height=24
			margin-top=14
			margin-right=14
			spacing=8
		}
	}
}