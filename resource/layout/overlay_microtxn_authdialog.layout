"resource/layout/overlay_microtxn_authdialog.layout" {
	styles {
		Frame {
			render_bg {
				0="fill( x0, y1-51, x1, y1-50, darkestGrey )"
				1="fill( x0+1, y1-50, x1-1, y1-49, greyHighlight )"
				2="gradient( x0+1, y1-49, x1-1, y1-1, grey, lightGreyEnd )"
			}
		}

		ItemListStyle {
			minimum-height="150"
		}

		BalanceStyle {
			render_bg {
				// background fill
				0="gradient( x0 - 6, y0, x1 + 6, y1, green, darkestGreen)"

				// lines around
				1="fill( x0 - 5, y0 - 1, x1 + 5, y0    , lightestGreen )"  // top
				2="fill( x0 - 5, y1    , x1 + 5, y1 + 1, darkestGreen )"  // bottom
			}
			textcolor=darkestGrey
		}

		TotalAmtStyle {
			minimum-width="70"
		}

		AuthBtnStyle {
			minimum-width="100"
		}
		
		RefundTextStyle
		{
			textcolor="label2"
			selectedtextcolor="label2"
			scrollbar="0"
			font-size=14			
			render_bg {}
		}
		
		RefundTextLinkStyle
		{
			textcolor="label2"
			font-size=14
			font-style=underline
		}
		
		SeparatorStyle
		{
			render_bg
			{
				0="fill( x0, y0, x1, y1, label2 )"
			}
		}		
	}
	layout {
		region {
			name="main"
			width="max"
			height=250
			margin-left=10
			margin-top=40
			margin-right=10
		}

		region {
			name="total"
			region="main"
			align="bottom"
			width="max"
			height=24
			margin-right=25
		}

		region {
			name="buttons"
			align="bottom"
			width="max"
			height=51
		}
		place {
			control=BalanceDescLabel,BalanceLabel
			align=right
			y=6
			margin-right=75
			dir=left
			spacing=10
		}
		place {
			control=AuthorizeButton,CancelButton
			region=buttons
			align=right
			height=24
			margin-top=14
			margin-right=14
			dir=left
			spacing=8
		}
		place {
			control=ReasonLabel,ItemList
			region=main
			width=max
			dir=down
			spacing=15
		}

		place {
			control=TotalLabel,TotalAmtLabel
			region=total
			align=right
			margin-top=0
			dir=left
			spacing=15
		}

		place {
			control=ConvertedTotalLabel,ConvertedTotalAmtLabel
			region=total
			align=right
			margin-top=12
			spacing=15
			dir=left
		}
		
		place {
			control=RefundText
			start=Separator
			width=max
			height=50
			margin-top=7
			dir=down
			spacing=0
		}
		
		place {
			control=Separator
			start=total
			width=max
			height=1
			margin-left=10
			margin-right=10
			dir=down
			spacing=0
		}
	}
}
