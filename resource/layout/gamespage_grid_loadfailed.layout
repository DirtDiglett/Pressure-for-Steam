"resource/layout/gamespage_grid_loadfailed.layout" {
	styles {
		GamesGridPlaceholder {
			textcolor=white
			font-size=18
			font-family=semibold
		}

		GamesGridIconBorder {
			bgcolor="none"
			inset="0 0 0 0"
		    
		    render {}
		}
					
		GGPlaceholderBG {
			bgcolor=none
		}

		"GameItem_installed GamesGridPlaceholder" {
			textcolor="white"
		}
	}

	layout {
		region {
			name=icon_region
			width=max
			height=max 
		}
		
		place {
			control="background"
			width=max
			height=max
		}
		
		place {
			control="appname"
			align=center
			width=max
			margin=12
			margin-top=14
		}
		
		place {
			control="noappimage_border"
			region="icon_region"
			align=top-center
			x=0
			y=0
			width=34
			height=34
			margin-top=48
		}
		
		place {
			control="noappimage"
			region="icon_region"
			align=top-center
			x=0
			y=0
			width=32
			height=32
			margin-top=49
		}
	}
}