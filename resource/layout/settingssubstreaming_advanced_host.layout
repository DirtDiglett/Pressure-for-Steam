"resource/layout/settingssubstreaming_advanced_host.layout" {
layout {
		region {
			name="bottom"
			align="bottom"
			width=max
			height=51
		}

		place {
			control="DescriptionLabel,ChangeDesktopResolution"
			align=top
			width=max
			margin-left=32
			margin-top=48
			margin-right=27
			dir=down
			spacing=-1
		}
		
		place {
			control="DynamicallyAdjustResolution"
			start=ChangeDesktopResolution
			align=top
			width=max
			margin-left=0
			margin-top=0
			margin-right=-10
			dir=down
			spacing=-1
		}
		
		place {
			control="EnableHardwareEncoding"
			start=DynamicallyAdjustResolution
			align=top
			width=max
			margin-left=0
			margin-top=0
			margin-right=10
			dir=down
			spacing=-1
		}
		
		place {
			control="EnableHardwareEncodingNVIDIA"
			start=EnableHardwareEncoding
			align=top
			width=max
			margin-left=20
			margin-top=-2
			margin-right=32
			dir=down
			spacing=-1
		}
		
		place {
			control="EnableCaptureNVFBC"
			start=EnableHardwareEncodingNVIDIA
			align=top
			width=max
			margin-left=20
			margin-top=-2
			margin-right=37
			dir=down
			spacing=-1
		}
		
		place {
			control="EnableHardwareEncodingAMD,EnableHardwareEncodingIntel"
			start=EnableCaptureNVFBC
			align=top
			width=max
			margin-left=-20
			margin-top=-2
			margin-right=32
			dir=down
			spacing=-1
		}
		place {
			control="SoftwareEncodingThreadsLabel,SoftwareEncodingThreads"
			start=EnableHardwareEncodingIntel
			align=top
			width=max
			margin-left=-20
			margin-top=5
			margin-right=27
			margin-bottom=-2
			spacing=3
			dir=down
		}
		
		place {
			control="EnableTrafficPriorityLabel,EnableTrafficPriority"
			start=SoftwareEncodingThreads
			align=top
			width=max
			margin-left=0
			margin-top=5
			margin-right=27
			spacing=0
			dir=down
		}
		
		place {
			control="SupportInformationLabel"
			region="bottom"
			align=left
			margin-left=14
			margin-top=14
		}

		place {
			control="OKButton"
			region="bottom"
			align=right
			width=92
			height=28
			margin-top=12
			margin-right=14
			spacing=8
		}
	}
}