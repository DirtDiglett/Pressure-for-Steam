"resource/layout/overlaytaskbar.layout" {
	controls {
		TaskbarPanel {
			controlname="EditablePanel"
		}
		SettingsButton {
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_Settings"
			style=taskbar
		}
		WebBrowserButton
		{
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_WebBrowser"
			style=taskbar
		}
		MusicPlayerButton
		{
			controlname="URLLabel"
			labeltext="#Overlay_Taskbar_Music"
			style=taskbar
		}
		
		SteamLogo	
		{ 
			controlname="ImagePanel" 
			zpos=1 
			//image="resource/steam_logo_big"
			scaleimage=0
		}
		
		view_friends
		{
			ControlName=URLLabel
			labelText="#Steam_ViewFriends"
			command="OpenFriendsDialog"
			
			style="view_friends"
			textAlignment=east
		}
		online_friends
		{
			ControlName=Label
			labelText="#Steam_OnlineFriends"
			style="online_friends"
			textAlignment=east
		}	
	}
	
	styles {
		taskbar {
			font-size=13
			font-family=basefont
			font-style=regular
			textcolor=blue
		}
		
			taskbar:hover {
				textcolor=lightestBlue
			}
		
		view_friends {
			textcolor="Text"
			bgcolor="none"
			font-family=basefont
			font-size=14
			font-weight=400
			font-style=regular
		}
		view_friends:Hover
		{
			 textcolor="textHover"
		}

		online_friends [$OSX] {
			textcolor="none"
			bgcolor="none"
			//image=graphics/overlay/settings
			inset="0 1 0 0"
		}		
	
		online_friends [!$OSX] {
			textcolor="none"
			bgcolor="none"
			//image=graphics/overlay/settings
			inset="0 4 0 0"
		}
	}
	
	layout {
		
		place { control="TaskbarPanel" width=700 height=100 align=top-center }
		place { control="SteamLogo"  x=225 margin-top=50 width=12 height=12 }
		
		region 	{
			name=toparea 
			align=top-center
			width=400
			height=100 
		}
		
		//place { controls="SteamLogo,WebBrowserButton,online_friends,SettingsButton" region=toparea x=0 dir=right spacing=3 align=top-center margin-top=50}		


		place [$OSX] { 
			controls="WebBrowserButton,SettingsButton,MusicPlayerButton" 
			region=toparea 
			x=0 
			dir=right 
			spacing=8
			align=top-center
			margin-top=5
		}		

		place [!$OSX] { 
			controls="WebBrowserButton,SettingsButton,MusicPlayerButton" 
			region=toparea 
			x=0 
			dir=right 
			spacing=8 
			align=top-center
			margin-top=5
		}
		
		// TEMPORARY NULL ZONE
		place {
			control="SteamLogo,online_friends"
			width=0
			height=0
			y=-100
			x=-100
		}


		//place { controls="" region=toparea x=0 dir=right spacing=3 align=left margin-top=50}	
		
		place { controls=",ScreenshotsButton" x=0 dir=right spacing=3 align=right margin-top=50}


		//place { control="FriendPanel" height=48 width=48 align=right margin-right=6 margin-top=4 }
		place { control="view_friends" height=0 y=0 align=right dir=right margin-right=60 }
		//place { control="online_friends" height=12 y=26 align=right dir=right margin-right=60 }
		place { control="FriendPanel" height=0 width=0 y=0 x=0}
	}	
}
