"resource/layout/musicpage_details_album.layout" {
	styles {
		CMusicPage_Details_Album {
			bgcolor=none
			minimum-height=350
		
			render {}
			render_bg {}
		}
	
		AlbumTitleStyle {
			bgcolor=black65
			textcolor=white
			font-size=48
			font-family=headerfont
			font-weight=400
			inset="240 20 0 0"
			padding-bottom=60
		}
		ArtistStyle {
			bgcolor=none
			textcolor=white
			font-size=20
			font-family=basefont
			font-weight=600
		}
	
		TracksInfoStyle {
			bgcolor=none
			textcolor=lightestGrey
			font-size=15
font-size=14 [$LINUX]
			font-family=basefont
			font-weight=400
			padding-left=0
			padding-top=0
			padding-right=10
			padding-bottom=0
		}
	
		TrackStyle {
			bgcolor=black65
			textcolor=Text2
			font-size=15
font-size=14 [$LINUX]
			font-family=basefont
			font-weight=400
			padding-top=0
			padding-bottom=10
		}
	
			TrackStyle:hover {
				textcolor="text"
			}
	
		CoverStyle {
			render {
				0="image(x0-10,y0-10,x1+10,y1+10, graphics/album_shadow)"
			}
		}
	
		AdditionalActionButtonStyle {
			textcolor=blue
			font-size=16
font-size=15
font-size=14 [$LINUX]
			font-family=basefont
			padding-top=0
			padding-bottom=0
		
			render_bg	{}
		}
	
			AdditionalActionButtonStyle:hover {
				textcolor=lightestBlue
			}
	
	
		ActionButtonStyle {  
			bgcolor=none
			textcolor=none
			minimum-width=200
			minimum-height=200

			render {
				0="image(x0,y0,x1,y1, graphics/music/library_play)"
			}
		}
		
			ActionButtonStyle:hover {
				render {
					0="image(x0,y0,x1,y1, graphics/music/library_play_hover)"
				}		
			}
		
			ActionButtonStyle:active {
				render {
					0="image(x0,y0,x1,y1, graphics/music/library_play_hover)"
				}		
			}
	}

	layout {
		region {
			name=album
			width=max
			height=max
			overflow=allow-vertical
		}
		place {
			control="CoverImage"
			align=top
			width=200
			height=200
			y=20
			x=20
		}
		place {
			control=PlayAlbumButton,PlayTracksButton
			align=top
			width=200
			height=200
			y=20
			x=20
		}
		place {
			control=AlbumTitleLabel
			x=0
			width=max
			dir=right
		}
		place {
			control=ArtistLabel
			start=AlbumTitleLabel
			dir=down
			y=-60
			x=240
		}
		place {		
			control=leftcolumn
			region=headerregion
			dir=down
		}
	
		place {
			control=TracksInfoLabel
			start=ArtistLabel
			dir=down
			spacing=10
		}
	
		place {
			control=AddTracksToQueueButton,AddTracksToPlaylistButton,AddAlbumToQueueButton,AddAlbumToPlaylistButton,ShowAlbumButton,ShowAlbumInSystemButton
			start=CoverImage
			dir=down
			y=10		
		}
	
		place {
			control=*MusicPageDetailsTrack
			start=TracksInfoLabel
			region=album
			width=max
			y=30
			dir=down
		}
	}
}
