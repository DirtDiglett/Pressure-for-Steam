"resource/layout/steamrootdialog_gamespage_list.layout" {
	controls {
		"GamesList" {
			tabposition=1
		}
	}

	colors {
		ListPanel.PostSectionLeading	12
	}	
	
	styles {
		"CGamesListPanel ListPanelColumnSelectButton" {
       			inset="13 2 0 0"
       			padding-left=0
       			padding-right=0
       			bgcolor=none
        		render {
				1 = "fill ( x0 + 1, y0 , x1 - 1, y0 + 1, greyHighlight )" //greyHighlight
          			5="image( x0 + 9, y0 + 5, x1, y1, graphics/cog )"
        		}   
        		render_bg {
        			2 = "gradient ( x0 + 1, y0 + 1, x1 - 1, y1, grey, lightGreyEnd )" // bg fill lightGreyEnd
				3 = "fill ( x0 + 1, y1, x1 - 1, y1+1, darkGreyEnd )"
        		}
		}

			
		
				ListPanelSectionCollapser {
			inset="-6 0 0 0"
			image="graphics/icon_collapse"
			padding-top=0
			padding-bottom=0
			
			render_bg {
				0="gradient(x0, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0, y0, x1, y0+1, greyHighlight)"
			}   
		}
		
			ListPanelSectionCollapser:selected {
				image="graphics/icon_expand"
			}
		
		ListPanelSectionHeader {     
			inset="0 2 0 0"
			textcolor=white
			
			font-style="outerglow"
			font-outerglow-color="darkGreyEnd"
			font-outerglow-offset=1
			font-outerglow-filtersize=1
						
			render_bg {
				0="gradient(x0, y0+1, x1, y1, grey, lightGreyEnd)"
				1="fill(x0, y0, x1, y0+1, greyHighlight)"
			}    
		} 
		
			"Csteamrootdialog ListPanelColumnheader"
    {
		font-family=basefont
		font-size=14
		font-size=13 [$OSX]
		font-weight=400
		textcolor  = "white"
		font-style  = "none"
		bgcolor  = "none"
		inset  = "0 0 0 0"
		inset  = "0 1 0 0" [$OSX]
		padding-top=5

			render {
				1 = "fill ( x0 + 1, y0 , x1 - 1, y0 + 1, greyHighlight )" //greyHighlight
			}
				
			render_bg {
				// fill
				//0 = "fill ( x0 + 1, y0 + 1, x1 - 1, y0 + 2, darkGreyEnd )"
				//1 = "fill ( x0 + 1, y0 + 2, x1 - 1, y0 + 3, Red )" //greyHighlight
				2 = "gradient ( x0 + 1, y0 + 1, x1 - 1, y1, grey, lightGreyEnd )" // bg fill lightGreyEnd
				3 = "fill ( x0 + 1, y1, x1 - 1, y1+1, darkGreyEnd )"
			}   
		}
		
		
	}
	
	layout {
		// content pages
		place { 
			control="GamesList"
			width=max
			height=max
			margin-left=-3
			margin-top=0
			margin-right=0
		}

	}

}
