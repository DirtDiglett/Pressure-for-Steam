"resource/layout/overlay_achievementsdetails.layout" {
	styles {
		detailsboxtitle {
			textcolor=none
			image="graphics/overlay/achievement_overlay"
		}
		
		button {
			textcolor=blue
			font-size=15
font-size=14 [$LINUX]
			font-family=basefont
			padding=0
			
			render {}
			render_bg {
				0="image(x1-5, y1-13, x1, y1, graphics/details_button)"
			}
		}
		
			button:hover {
				textcolor=lightestBlue
				
				render {}
				render_bg {
					0="image(x1-5, y1-13, x1, y1, graphics/details_button)"
				}
			}	
		
		highlight {
			textcolor=white
			font-family=headerfont
			font-size=30
			
			render_bg {
				
			}
		}

		progressbackground {
			bgcolor=none
			
			render_bg {
				0="fill( x0, y0, x1-6, y1, black )"
				1="fill( x0, y1 -1, x1-6, y1, grey25 )"
			}
		}

		progressbarimage {
			bgcolor="green"

			render = {
				6="fill(x0,y0,x1,y0+1, lightestGreen)"
				7="fill(x0, y0+1, x1, y1, green)"
			}
		}
	}
	
	layout {
		region {
			name=box
			width=800
			height=145
		}

		place { 
			controls=ProgressTextEarned
			x=16
			y=10
		}
		
		place { 
			control=ViewAchievementsButton
			start=ProgressTextEarned
			x=-3
			y=4
		}


		place { 
			control=progressbackground 
			region=box
			x=15
			y=41
			width=max 
			height=5 
		}
		
		place { 
			control=progressbarimage 
			region=body
			x=15
			y=42 
			height=2 
			margin-left=1 
			margin-right=1
		}
		
		// This is used to make the overlay for the achievement images. It's temporarily disabled.
		place { 
			control="TitleText"
			region=box
			align=bottom
			x=15
			width=0
			height=0
			margin-bottom=15
		}
		
		place {
			control=*achievement
			region=box
			align=bottom
			x=19
			width=390
			height=64
			margin-bottom=18
			dir=right
			spacing=8
		}		
	}
}