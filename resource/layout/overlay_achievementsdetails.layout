"resource/layout/overlay_achievementsdetails.layout" {
	controls {
		AchievementsDetailPanel 
		{ 
			controlname="COverlay_Details_Acheivements" 
			style=detailsbox
		}
		TitleText { controlname="label" labeltext="#Overlay_Achievement_Title" style=detailsboxtitle zpos=1 }
		
		ViewAchievementsButton {
			controlname=button
			labeltext="#Overlay_Friends_ViewAchievements"
			zpos=10
		}
		
		progressbackground { controlname="ImagePanel" style="progressbackground" }
		progressbarimage { controlname="ImagePanel" style="progressbarimage" }
		
		
		ProgressTextEarned { 
			controlname=label 
			style=highlight 
			labeltext="#Overlay_Achievement_Progress" 
		}

	}
	
	colors {}	

	styles {
		
		detailsbox {
			//bgcolor=orange
		}
		
		detailsboxtitle {
			font-size=13
			textcolor=none
			font-style=regular
		}
		
		button {
			textcolor=blue
			font-size=13
			font-style=regular
			
			padding=0
			
			render {}
			render_bg {}
		}
		
			button:hover {
				textcolor=lightestBlue
				
				render{}
				render_bg {}
			}
		
		highlight {
			textcolor=none
			image=graphics/overlay/achievements
			inset="10 11 0 0"
		}
		
		progressbackground
		{
			bgcolor=none
			render_bg
			{
				0="fill( x0, y0, x0+1, y1, Label )"
				1="fill( x0+1, y1-1, x1-1, y1, Label )"
				2="fill( x0+1, y0, x1-1, y0+1, Label )"
				3="fill( x1-1, y0, x1, y1, Label )"
			}
		}

		progressbarimage
		{
			bgcolor="Label"
			render_bg = {}
		}
		
		
	}
	
	layout
	{
		region { 
			name=box 
			width=max 
			height=max 
		}
		
		region { 
			name=progresstext 
			width=max 
			height=max
		}
		
		place { 
			control=ProgressTextEarned,ViewAchievementsButton  
			region=box 
			dir=right
			y=55
			spacing=3
		}
		
		place { 
			controls=TitleText
			region=box 
			y=55
		}

		place { 
			controls=progressbackground,progressbarimage,*achievement
			width=0
			height=0
		}
		
		//place { region=box control=progressbackground y=62 width=max height=18 }
		//place { region=box control=progressbarimage y=66 height=10 margin-left=4 margin-right=4 }

		//place { region=box control=*achievement y=90 x=0 width=148 height=84 }
		
		
	}
}
