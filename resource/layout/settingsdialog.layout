"resource/layout/settingsdialog.layout" {
	controls {
		SettingsDialog {
			controlname="CDialogSettings"
		}
		
		okbutton {
			controlname="OKButton"
		}
			 
		cancelbutton {
			controlname="CancelButton"
		}
			 
		settingslist {
			controlname="SettingsList"
			style="SettingsList"
			wide=180
		}
		
		sheet {
			controlname="Sheet"
			style="PropertySheet"
		}
	}
	
	styles {
		CDialogSettings {
			minimum-width="740"
			minimum-height="585"
			bgcolor=none
			
			render {
				1="gradient(x0+194,y0+25, x1, y0+31, black40, none)"
			}
			
			render_bg {     

      	 		0="fill( x0, y0, x1, y1, darkestGrey )" //grey
      	 		1="fill(x0+1,y0+1,x1-1,y1-1, darkGreyEnd)"
				
			//	2="fill( x0+194, y0+27, x1, y0+32, darkestGrey )"
  			
  				3="fill( x0, y1-51, x1, y1-50, darkestGrey )"
				4="fill( x0+1, y1-50, x1-1, y1-49, greyHighlight )"
				5="gradient( x0+1, y1-49, x1-1, y1-1, grey, lightGreyEnd )"
			}
		}
		
		PropertySheet {
			minimum-width="545"
			minimum-height="505"
			inset="20 32 0 0"
			bgcolor=none
			
			render {
				0="fill(x0,y0+1,x0+5,y1, lightGreyEnd)"	
				1="fill(x0,y0+1,x0+1,y1, darkestGrey)"
			}
			
			render_bg {
				0="fill(x0,y0+1,x1,y1, lightGreyEnd)"
			}

		}

		"SettingsList" {
			inset="-4 -14 1 0" //inset="6 -14 4 0" 
			minimum-width="200"
			minimum-height="525"
			font-size=18
			padding=6
		}
		
		ListPanel {
			render{}
			render_bg{}
		}
		
		ListPanelInterior {     
			inset="3 0 0 0"
			font-size=14
			textcolor="white"
			bgcolor="none" 
	   		
	   		render {}
	
			render_bg {}
		} 
		
		ListPanelSectionheader {
			render{}
			render_bg{}
		}
	}
	
	layout {
		region { 
			name="buttons" 
			width=max 
			height=51 
			align="bottom" 
		}
		
		region { 
			name="body"
			margin-left=0
			margin-right=-1
			margin-bottom=51
			margin-top=-20
		}		
		
		place [!$OSX]  { 
			control="frame_minimize,frame_close" 
			align=right 
			margin-top=-2 
			margin-right=6 
			spacing=-9 
		}

		place { 
			control="settingslist,sheet"
			region=body 
			width=max 
			height=max 
			spacing=25  
		}

		place { 
			control="settingslist"
			margin-top=25 
		}

		place { 
			control="sheet" 
			margin-left=201
			margin-top=0 
		}

		place { 
			control="okbutton,cancelbutton" 
			region="buttons"
		    width=92 
			height=24 
			align=right
			margin-top=14
			margin-right=14 
			spacing=8
		}
	}
}