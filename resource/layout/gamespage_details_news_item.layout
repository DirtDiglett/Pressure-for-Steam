"resource/layout/gamespage_details_news_item.layout" {
	colors {
		// The extra space needed vertical beyond the autocomputed size of the blurb contents
		// this is used in code to make the vertical size of the panel fit the title/author/morelink
		// and should be updated if you change vertical padding/margins/layout.
		GameDetailsNewsItem.ExtraVerticalSpacing "76"

		// Override base style rich text x inset inside this control
		RichText.InsetX "0"
		RichText.InsetY "3" 
	}
	
	styles {
		title_label {
			textcolor="white"
			font-family=basefont
			font-size=20
			padding-top=20
			font-weight=600
		}

		date_and_author {
			textcolor="greyhighlight"
			font-size=15
		}

		newsitem_body {
			selectedtextcolor="trueWhite"
			textcolor="white"
			font-family=basefont
			font-size=15

			render_bg {}
		}
		
		newsitem_body [$LINUX] {
			selectedtextcolor="trueWhite"
			textcolor="white"
			font-family=basefont
			font-size=14

			render_bg {}
		}

		"newsitem_body url" {
			selectedtextcolor="blue"
			textcolor=blue
			font-size=15
			font-style="underline"
		}
		
		"newsitem_body url" [$LINUX] {
			selectedtextcolor="blue"
			textcolor=blue
			font-size=14
			font-style="underline"
		}

			"newsitem_body url:hover" {
				textcolor="lightestBlue"
			}
		
		"newsitem_body bold" {
			selectedtextcolor="trueWhite"
			textcolor="white"
			font-weight=1000	
		}
		
		more_link {
			selectedtextcolor="blue"
			textcolor="blue"
			font-family=basefont
			font-size=15
			font-style="none"
			font-weight=400				
		}
		
			more_link:hover {
				font-style="none"
				textcolor="lightestBlue"
			}
	}

	layout {
		region {
			name=body
			width=max
			margin=0
		}
		
		place {
			control=newsitem_title
			region=body
			x=0
			y=0
			width=max
			height=44
		}
		
		place {
			control=newsitem_dateandauthor
			region=body
			start=newsitem_title
			dir=down
			width=max
		}
		
		place {
			control=newsitem_body
			region=body
			start=newsitem_dateandauthor
			dir=down
			width=max
		}
		
		place {
			control=newsitem_more
			region=body
			align=bottom
		}
	}
}