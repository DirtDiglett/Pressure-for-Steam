"resource/layout/gamespage_details_welcome.layout" {
	controls {
		welcomedetails { 
			controlname="CGamesPage_Details_Welcome" 
			style="nonsteamdetails" 
		}
		
		headerlabel { 
			controlname="Label" 
			style="gamedetails-headerlabel" 
			labeltext="#Steam_Welcome" 
		}
		
		bodybasic { 
			controlname="RichText" 
			style="bodycontent" 
		}
		
		bodynofriends { 
			controlname="RichText" 
			style="bodycontent" 
		}
		
		bodyhelp { 
			controlname="RichText" 
			style="bodycontent" 
		}
	}

	colors {
		RichText.InsetX "0"
		RichText.InsetY "3" 
		GameDetailsWelcome.ExtraVerticalSpacing "52"
		GameDetailsWelcome.WelcomeTextSpacing "0"
	}

	styles {
		nonsteamdetails { 
			bgcolor=black65
		}

		bodycontent {
			textcolor="white"
			selectedtextcolor="darkestGrey"
			font-size=13
			render_bg {}
		}

		"RichText url" {
			font-size=13
		}
	}

	layout {
		region { 
			name=body 
			margin=20 
			width=max 
			height=max 
		}
		
		place { 
			region=body 
			control=headerlabel 
			width=max 
		}
		
		place { 
			region=body 
			y=26 
			control=bodybasic,bodynofriends,bodyhelp 
			dir=down 
			width=max 
			spacing=2 
		}
	}

}
