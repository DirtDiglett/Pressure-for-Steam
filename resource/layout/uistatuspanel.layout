"resource/layout/uistatuspanel.layout" {
	styles {
		SlimProgressBar {
			textcolor="lightestGreen"

			render	{}
			render_bg {
				0="fill( x0-1, y0-1, x1+1, y1+1, black )" // Fill/Frame
				//Set at this point for the people downloading 10-99 downloads at once
				2="fill( x0-1, y1+1, x1+1, y1+2, greyHighlight )" //Bottom Highlight
			}
		}

		StatusLabel {
			textcolor="white"
			font-family=basefont
			font-outerglow-color="darkGreyEnd"
			font-outerglow-filtersize=1
			font-outerglow-offset=1
			font-size=13
			font-style="normal,outerglow"
			font-weight=400
			inset="0 2 0 0"

			render_bg {
				//1="image( x0-20, y0, x0-6, y1, graphics/icons/downloads )"
			}
		}

		StatusLabel:hover {
			textcolor="trueWhite"
			font-family=basefont
			font-outerglow-color="darkGreyEnd"
			font-outerglow-filtersize=1
			font-outerglow-offset=1
			font-size=13
			font-style="normal,outerglow"
			font-weight=400

			render_bg {}
		}

		StatusLabelDim {
			textcolor="white"
			font-family=basefont
			font-outerglow-color="darkGreyEnd"
			font-outerglow-filtersize=1
			font-outerglow-offset=1
			font-size=13
			font-style="normal;outerglow"
			font-weight=400
			inset="0 2 0 0"
		}

		StatusLabelDim:hover {
			textcolor="trueWhite"
			font-family=basefont
			font-outerglow-color="darkGreyEnd"
			font-outerglow-filtersize=1  
			font-outerglow-offset=1
			font-size=13
			font-style="normal;outerglow"
			font-weight=400
		}
	}

	layout {
		region {
			name="ProgressRegion"
			align=bottom
			width=max
			height=max
			margin=0
		}

		region {
			name="StatusRegion"
			align=bottom
			width=max
			height=max
		}

		place {
			control=StatusProgressbar
			region=ProgressRegion
			align="top-center"
			y=23
			width=450
			height=2
		}

		place {
			control="StatusDownloading, StatusPaused, StatusComplete"
			align="top-center"
			region="StatusRegion"
			y=4
		}
	}
}