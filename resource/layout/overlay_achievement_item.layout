"resource/layout/overlay_achievement_item.layout" {
	styles {
		label {
			textcolor=greyHighlight
			font-size=15
		}
	
		name {
			textcolor=white
			font-size=26
			font-family=semibold
		}
	}

	layout {
		region {
			name=body
			width=max
		}
		
		place {
			control=icon
			region=body
			x=0
			y=0
			width=64
			height=64
		}
		
		place {
			control=caption
			region=body
			start=icon
			x=10
			y=12
			dir=right
		}
		
		place {
			control=name
			region=body
			start=caption
			y=-4
			dir=down
		}
	}
}